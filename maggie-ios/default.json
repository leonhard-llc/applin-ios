{
  "/": {
    "typ": "plain-page",
    "widget": {
      "typ": "expand",
      "widget": {
        "typ": "expand",
        "alignment": "center",
        "widget": {
          "typ": "spinner"
        }
      }
    }
  },
  "/maggie-error-details": {
    "typ": "nav-page",
    "title": "Error Details",
    "widget": {
      "typ": "scroll",
      "widget": {
        "typ": "error-details"
      }
    }
  },
  "/maggie-network-error-modal": {
    "typ": "alert-modal",
    "title": "Connection Problem",
    "widgets": [
      {
        "typ": "text",
        "text": "Could not contact server.  Check your connection and try again."
      },
      {
        "typ": "button",
        "text": "Details",
        "actions": [
          "push:/maggie-error-details"
        ]
      },
      {
        "typ": "button",
        "text": "Status",
        "actions": [
          "push:/maggie-server-status"
        ]
      },
      {
        "typ": "button",
        "text": "OK",
        "actions": [
          "pop"
        ],
        "default": true
      }
    ]
  },
  "/maggie-rpc-error-modal": {
    "typ": "alert-modal",
    "title": "Error",
    "widgets": [
      {
        "typ": "text",
        "text": "Problem talking to server.  Please try again or update the app."
      },
      {
        "typ": "button",
        "text": "Details",
        "actions": [
          "push:/maggie-error-details"
        ]
      },
      {
        "typ": "button",
        "text": "Status",
        "actions": [
          "push:/maggie-server-status"
        ]
      },
      {
        "typ": "button",
        "text": "Contact Support",
        "actions": [
          "push:/maggie-contact-support-modal"
        ]
      },
      {
        "typ": "button",
        "text": "Update",
        "actions": [
          "launch-url:itms-apps://itunes.apple.com/app/id00000000000"
        ]
      },
      {
        "typ": "button",
        "text": "OK",
        "actions": [
          "pop"
        ],
        "default": true
      }
    ]
  }
}
