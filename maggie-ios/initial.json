{
  "/": {
    "typ": "page",
    "widget": {
      "typ": "expand",
      "widget": {
        "typ": "center",
        "widget": {
          "typ": "text",
          "text": "Hello"
        }
      }
    }
  },
  "/maggie-server-status": {
    "typ": "page",
    "widget": {
      "typ": "column",
      "widgets": [
        {
          "typ": "title-bar",
          "text": "Status"
        },
        {
          "typ": "expand",
          "widget": {
            "typ": "markdown-view",
            "url": "https://cozydatestatus.com/index.md"
          }
        },
        {
          "typ": "button",
          "text": "Reload",
          "actions": [
            "refresh"
          ]
        }
      ]
    }
  },
  "/copied-to-clipboard-modal": {
    "typ": "modal",
    "widget": {
      "typ": "alert",
      "title": "Copied",
      "widgets": [
        {
          "typ": "button",
          "text": "OK",
          "actions": [
            "pop"
          ],
          "default": true
        }
      ]
    }
  },
  "/maggie-contact-support-modal": {
    "typ": "modal",
    "widget": {
      "typ": "alert",
      "title": "Contact Support",
      "widgets": [
        {
          "typ": "text",
          "text": "We want to hear your compliments & complaints and answer your questions."
        },
        {
          "typ": "button",
          "text": "Text 415-769-3520",
          "comment": "The 'sms' URI scheme https://datatracker.ietf.org/doc/html/rfc5724",
          "actions": [
            "launch-url:sms:+14157693520?body=%5BRpcError%5D%0AHi%20App%20Support%20Team%2C%0A"
          ]
        },
        {
          "typ": "button",
          "text": "Email cozydate@leonhardllc.com",
          "comment": "The 'mailto' URI Scheme https://datatracker.ietf.org/doc/html/rfc6068",
          "actions": [
            "launch-url:mailto:cozydate%40leonhardllc.com?subject=RpcError&body=Hi%20App%20Support%20Team%2C%0A"
          ]
        },
        {
          "typ": "button",
          "text": "Copy cozydate@leonhardllc.com",
          "actions": [
            "copy-to-clipboard:cozydate%40leonhardllc.com",
            "push:/copied-to-clipboard-modal"
          ]
        },
        {
          "typ": "button",
          "text": "OK",
          "actions": [
            "pop"
          ],
          "default": true
        }
      ]
    }
  },
  "/maggie-rpc-error-modal": {
    "typ": "modal",
    "widget": {
      "typ": "alert",
      "title": "Error",
      "widgets": [
        {
          "typ": "text",
          "text": "Problem talking to server.  Please try again or update the app."
        },
        {
          "typ": "button",
          "text": "Details",
          "actions": [
            "push:/maggie-error-details"
          ]
        },
        {
          "typ": "button",
          "text": "Status",
          "actions": [
            "push:/maggie-server-status"
          ]
        },
        {
          "typ": "button",
          "text": "Contact Support",
          "actions": [
            "push:/maggie-contact-support-modal"
          ]
        },
        {
          "typ": "button",
          "text": "Update",
          "actions-ios": [
            "launch-url:itms-apps://itunes.apple.com/app/id1064216828"
          ],
          "actions-android": [
            "launch-url:http://play.google.com/store/apps/details?id=com.leonhardllc.datingapp.prod"
          ]
        },
        {
          "typ": "button",
          "text": "OK",
          "actions": [
            "pop"
          ],
          "default": true
        }
      ]
    }
  }
}
