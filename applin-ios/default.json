{
  "pages": {
    "/": {
      "typ": "plain-page",
      "title": "Age Form",
      "widget": {
        "typ": "column",
        "widgets": [
          {
            "typ": "image",
            "url": "asset:///logo.png",
            "aspect-ratio": 1.67
          },
          {
            "typ": "text",
            "text": "To use this app, you must agree to the Terms of Use and be at least 18 years old."
          },
          {
            "typ": "form",
            "widgets": [
              {
                "typ": "nav-button",
                "text": "Terms of Use",
                "actions": [
                  "push:/terms"
                ]
              },
              {
                "typ": "nav-button",
                "text": "Privacy Policy",
                "actions": [
                  "push:/privacy"
                ]
              }
            ]
          },
          {
            "typ": "form-button",
            "text": "I Agree and I am 18+ Years Old",
            "actions": [
              "poll"
            ]
          }
        ]
      }
    },
    "/terms": {
      "typ": "nav-page",
      "title": "Terms of Use",
      "widget": {
        "typ": "scroll",
        "widget": {
          "typ": "text",
          "text": "TERMS OF USE"
        }
      }
    },
    "/privacy": {
      "typ": "nav-page",
      "title": "Privacy Policy",
      "widget": {
        "typ": "scroll",
        "widget": {
          "typ": "text",
          "text": "PRIVACY POLICY"
        }
      }
    },
    "/applin-error-details": {
      "typ": "nav-page",
      "title": "Error Details",
      "widget": {
        "typ": "scroll",
        "widget": {
          "typ": "last-error-text"
        }
      }
    },
    "/applin-network-error-modal": {
      "typ": "alert-modal",
      "title": "Connection Problem",
      "text": "Could not contact server.  Check your connection and try again.",
      "widgets": [
        {
          "typ": "modal-button",
          "text": "Details",
          "actions": [
            "push:/applin-error-details"
          ]
        },
        {
          "typ": "modal-button",
          "text": "Status",
          "actions": [
            "push:/applin-server-status"
          ]
        },
        {
          "typ": "modal-button",
          "text": "OK",
          "actions": [
            "pop"
          ],
          "default": true
        }
      ]
    },
    "/applin-rpc-error-modal": {
      "typ": "alert-modal",
      "title": "Error",
      "text": "Problem talking to server.  Please try again or update the app.",
      "widgets": [
        {
          "typ": "modal-button",
          "text": "Details",
          "actions": [
            "push:/applin-error-details"
          ]
        },
        {
          "typ": "modal-button",
          "text": "Status",
          "actions": [
            "push:/applin-server-status"
          ]
        },
        {
          "typ": "modal-button",
          "text": "Contact Support",
          "actions": [
            "push:/applin-contact-support-modal"
          ]
        },
        {
          "typ": "modal-button",
          "text": "Update",
          "actions": [
            "launch-url:itms-apps://itunes.apple.com/app/id00000000000"
          ]
        },
        {
          "typ": "modal-button",
          "text": "OK",
          "actions": [
            "pop"
          ],
          "default": true
        }
      ]
    }
  }
}
