{
  "/": {
    "typ": "plain-page",
    "title": "Home",
    "widget": {
      "typ": "form",
      "widgets": [
        {
          "typ": "text",
          "text": "Example form-text"
        },
        {
          "typ": "form-detail",
          "actions": [
            "push:/example-alert1"
          ],
          "text": "Example form-detail"
        },
        {
          "typ": "form-detail",
          "actions": [
            "push:/example-alert1"
          ],
          "text": "Example form-detail",
          "sub-text": "with sub-text"
        },
        {
          "typ": "form-detail",
          "actions": [
            "push:/example-alert1"
          ],
          "photo-url": "https://plchldr.co/i/150x150?bg=ffccff&fc=000001",
          "text": "Example form-detail"
        },
        {
          "typ": "form-detail",
          "actions": [
            "push:/example-alert1"
          ],
          "photo-url": "https://plchldr.co/i/150x150?bg=ffccff&fc=000001",
          "text": "Example form-detail",
          "sub-text": "with sub-text"
        },
        {
          "typ": "form-button",
          "actions": [
            "push:/example-alert1"
          ],
          "text": "Example form-button"
        },
        {
          "typ": "column",
          "widgets": [
            {
              "typ": "text",
              "text": "Example cell with other kinds of widgets"
            },
            {
              "typ": "text",
              "text": "aaa"
            },
            {
              "typ": "text",
              "text": "bbb"
            }
          ]
        }
      ]
    }
  },
  "/page1": {
    "typ": "nav-page",
    "title": "Page 1",
    "widget": {
      "typ": "column",
      "widgets": [
        {
          "typ": "text",
          "text": "Hello!"
        },
        {
          "typ": "button",
          "text": "Example Alert 2",
          "actions": [
            "push:/example-alert2"
          ]
        }
      ]
    }
  },
  "/example-alert1": {
    "typ": "alert-modal",
    "title": "Example Alert 1",
    "text": "Hello",
    "widgets": [
      {
        "typ": "modal-button",
        "text": "Example Alert 2",
        "actions": [
          "push:/example-alert2"
        ]
      },
      {
        "typ": "modal-button",
        "text": "OK",
        "actions": [
          "pop"
        ],
        "default": true
      }
    ]
  },
  "/example-alert2": {
    "typ": "alert-modal",
    "title": "Example Alert 2",
    "text": "Hello again",
    "widgets": [
      {
        "typ": "modal-button",
        "text": "Pop2",
        "actions": [
          "pop",
          "pop"
        ],
        "destructive": true
      },
      {
        "typ": "modal-button",
        "text": "OK",
        "actions": [
          "pop"
        ],
        "default": true
      }
    ]
  },
  "/applin-error-details": {
    "typ": "nav-page",
    "title": "Error Details",
    "widget": {
      "typ": "scroll",
      "widget": {
        "typ": "error-details"
      }
    }
  },
  "/applin-network-error-modal": {
    "typ": "alert-modal",
    "title": "Connection Problem",
    "widgets": [
      {
        "typ": "text",
        "text": "Could not contact server.  Check your connection and try again."
      },
      {
        "typ": "button",
        "text": "Details",
        "actions": [
          "push:/applin-error-details"
        ]
      },
      {
        "typ": "button",
        "text": "Status",
        "actions": [
          "push:/applin-server-status"
        ]
      },
      {
        "typ": "button",
        "text": "OK",
        "actions": [
          "pop"
        ],
        "default": true
      }
    ]
  },
  "/applin-rpc-error-modal": {
    "typ": "alert-modal",
    "title": "Error",
    "widgets": [
      {
        "typ": "text",
        "text": "Problem talking to server.  Please try again or update the app."
      },
      {
        "typ": "button",
        "text": "Details",
        "actions": [
          "push:/applin-error-details"
        ]
      },
      {
        "typ": "button",
        "text": "Status",
        "actions": [
          "push:/applin-server-status"
        ]
      },
      {
        "typ": "button",
        "text": "Contact Support",
        "actions": [
          "push:/applin-contact-support-modal"
        ]
      },
      {
        "typ": "button",
        "text": "Update",
        "actions": [
          "launch-url:itms-apps://itunes.apple.com/app/id00000000000"
        ]
      },
      {
        "typ": "button",
        "text": "OK",
        "actions": [
          "pop"
        ],
        "default": true
      }
    ]
  }
}
