{
  "pages": {
    "/": {
      "typ": "plain-page",
      "poll-seconds": 5,
      "title": "Home",
      "widget": {
        "typ": "form",
        "widgets": [
          {
            "typ": "image",
            "url": "asset:///logo.png",
            "aspect-ratio": 2.469
          },
          {
            "typ": "text",
            "text": "Connecting"
          }
        ]
      }
    },
    "/applin-error-details": {
      "typ": "nav-page",
      "title": "Error Details",
      "widget": {
        "typ": "scroll",
        "widget": {
          "typ": "last-error-text"
        }
      }
    },
    "/applin-network-error-modal": {
      "typ": "alert-modal",
      "title": "Connection Problem",
      "text": "Could not contact server.  Check your connection and try again.",
      "widgets": [
        {
          "typ": "modal-button",
          "text": "Details",
          "actions": [
            "push:/applin-error-details"
          ]
        },
        {
          "typ": "modal-button",
          "text": "Status",
          "actions": [
            "push:/applin-server-status"
          ]
        },
        {
          "typ": "modal-button",
          "text": "OK",
          "actions": [
            "pop"
          ],
          "default": true
        }
      ]
    },
    "/applin-rpc-error-modal": {
      "typ": "alert-modal",
      "title": "Error",
      "text": "Problem talking to server.  Please try again or update the app.",
      "widgets": [
        {
          "typ": "modal-button",
          "text": "Details",
          "actions": [
            "push:/applin-error-details"
          ]
        },
        {
          "typ": "modal-button",
          "text": "Status",
          "actions": [
            "push:/applin-server-status"
          ]
        },
        {
          "typ": "modal-button",
          "text": "Contact Support",
          "actions": [
            "push:/applin-contact-support-modal"
          ]
        },
        {
          "typ": "modal-button",
          "text": "Update",
          "actions": [
            "launch-url:itms-apps://itunes.apple.com/app/id00000000000"
          ]
        },
        {
          "typ": "modal-button",
          "text": "OK",
          "actions": [
            "pop"
          ],
          "default": true
        }
      ]
    }
  }
}
